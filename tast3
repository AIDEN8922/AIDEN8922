#include<iostream>
#include<cmath>
using namespace std;
float y,x,d,z;
int a[23],temp[100],E[8],fin[32],sign,e;     
int main(){
	cin>>y;
	if(y>=0) sign=0;
	else sign=1;
	x=fabs(y);
	z=floor(x);
	d=x-z;
	int z1,i=0,j=0,k;
	if(z>0){
		    z1=(int)z;
			while((z1!=0)&&(i<=38)){
			   temp[i]=z1%2;
			   z1=z1/2;                  //temp[012]=0 0 1  i=3
			   i++;
			}	
		    int j;
            for(j=i-2,k=0;j>=0&&22-k>=0;j--,k++)
			   a[22-k]=temp[j];                //j=-1 k=2  a[22 21]=0 0
		    for(k=23-i;k>=0;k--){
			   d=d*2;
			   if(d<1) a[k]=0;
			   else a[k]=1,d=d-1; }                //a[20 19]=1 1    18~0=0
            e=i-1+127;k=0;             //e=2
		    while(e!=0){
			   E[k]=e%2;        //e[0 1 2 3 4 5 6 7]=1 0 0 0 0 0 0 1
		       e=e/2;
			   k++;
			}
	}
    if(z==0){
		for(i=0;i<=59;i++){
			d=d*2;
			if(d<1) temp[i]=0;
			else temp[i]=1,d=d-1;
		}                               //temp[0 1 2 3]=0 0 0 1
		for(i=0;i<=22;i++){
			if (temp[i]!=0)
			{j=i;break;}
		}                    //j=3
		e=-(j+1)+127;i=0;
			while(e!=0){
				E[i]=e%2;
				e=e/2;
				i++;
			}
			for(i=0;i<=22;j++,i++){
				a[i]=temp[j+1];
			}
	}
	fin[31]=sign;
	for(i=7;i>=0;i--)
		fin[23+i]=E[i];
	for(i=22;i>=0;i--)
		fin[i]=a[i];
	int t;
	for(j=28;j>=0;j=j-4){
		t=0;
	    for(i=0;i<=3;i++)
		   t=t+(fin[j+i])*pow(2,i);
	    cout<<hex<<t;
	}
	return 0;
}
